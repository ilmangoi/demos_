{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@api/*": ["src/api/*"],
      "@assets/*": ["src/assets/*"],
      "@views/*": ["src/views/*"],
      "@utils/*": ["src/utils/*"],
      "@typings/*": ["src/typings/*"],
      "@store/*": ["src/store/*"],
      "@config/*": ["src/config/*"],
      "@reducer/*": ["src/reducer/*"],
      "@mutations/*": ["src/mutations/*"],
      "@components/*": ["src/components/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
